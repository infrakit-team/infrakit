{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "preserve",
    "noEmit": true,
    "lib": ["es2022"],
    "baseUrl": ".",
    "paths": {
      "@infrakit-team/modules/*": ["./app/modules/*"],
      "@infrakit-team/ui/*": ["./app/ui/adapter/*"],
      "@infrakit-team/sdk": ["./app/sdk"]
    }
  }
}
