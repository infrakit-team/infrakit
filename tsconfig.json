{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "preserve",
    "noEmit": true,
    "lib": ["es2022"],
    "baseUrl": ".",
    "paths": {
      "@infrakit-team/module-kv-memory": ["./app/modules/kv/adapter-memory"],
      "@infrakit-team/ui-hono": ["./app/ui/adapter-hono"],
      "@infrakit-team/ui-express": ["./app/ui/adapter-express"],
      "@infrakit-team/sdk": ["./app/sdk"]
    }
  }
}
